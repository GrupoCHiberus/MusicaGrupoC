@model PruebaMVC.Models.ListasCancione

@{
    ViewData["Title"] = "Create";
}

<h1>Crear nueva</h1>

<h4>Listas de Canciones</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ListasId" class="control-label"></label>
                <select asp-for="ListasId" class ="form-control" asp-items="ViewBag.ListasId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CancionesId" class="control-label"></label>
                <select asp-for="CancionesId" class ="form-control" asp-items="ViewBag.CancionesId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="fondoiconos">
    <a asp-action="Index"><i class="fa-solid fa-rotate-left"></i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
