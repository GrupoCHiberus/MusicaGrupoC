@model PruebaMVC.Models.VistaConciertosGrupo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ConciertosGrupo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="GruposId" class="control-label"></label>
                <select asp-for="GruposId" class="form-control" asp-items="ViewBag.GruposId"></select>
                <span asp-validation-for="GruposId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConciertosId" class="control-label"></label>
                <select asp-for="ConciertosId" class="form-control" asp-items="ViewBag.ConciertosId"></select>
                <span asp-validation-for="ConciertosId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Grabar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="fondoiconos">
    <a asp-action="Index"><i class="fa-solid fa-rotate-left"></i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}