@model IEnumerable<PruebaMVC.Models.Concierto>

@{
    ViewData["Title"] = "IndexConsulta";
}
<p class="pt-3">
    <a class="gordete" asp-action="Create">Create New</a>
</p>
<table class="table">
    <caption>
        informacion sobre conciertos
    </caption>
    <thead>
    <tr>
        <th>
            <a asp-action="IndexConsulta" asp-route-sortOrder="@ViewData["FechaSortParm"]">@Html.DisplayNameFor(model => model.Fecha)</a>
        </th>
        <th>
            <a asp-action="IndexConsulta" asp-route-sortOrder="@ViewData["GeneroSortParm"]">@Html.DisplayNameFor(model => model.Genero)</a>
        </th>
        <th>
            <a asp-action="IndexConsulta" asp-route-sortOrder="@ViewData["LugarSortParm"]">@Html.DisplayNameFor(model => model.Lugar)</a>
        </th>
        <th>
            <a asp-action="IndexConsulta" asp-route-sortOrder="@ViewData["TituloSortParm"]">@Html.DisplayNameFor(model => model.Titulo)</a>
        </th>
        <th>
            <a asp-action="IndexConsulta" asp-route-sortOrder="@ViewData["PrecioSortParm"]">@Html.DisplayNameFor(model => model.Precio)</a>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lugar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
