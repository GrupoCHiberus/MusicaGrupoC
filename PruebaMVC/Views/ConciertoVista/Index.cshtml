@model IEnumerable<PruebaMVC.Models.Concierto>

<div>
    <div style="height:150px;"></div>
    @await Component.InvokeAsync("ConciertoCarousel")
    <div style="height:150px;"></div>
</div>

<div id="contenedorTarjetas" class="d-flex flex-wrap justify-content-around">
    @foreach(var item in Model)
    {
        @await Component.InvokeAsync("TarjetaConcierto", item.Id)
    }
</div>
<div class="d-flex justify-content-center">
    <div id="pagAnterior" class="btn btn-info" style="border-radius:25px;color:white;width:150px;height:50px;">1</div>
    <div class="ms-5 text-center d-flex justify-content-center align-items-center bg-info" style="color:white;width:150px;height:50px;">
        <div>Pagina actual: <p style="display:inlne;" id="pagActual">1</p></div>
    </div>
    <div id="pagSiguiente" class="ms-5 btn btn-info" style="border-radius:25px;color:white;width:150px;height:50px;">2</div>
</div>
<section class="filtroIcono d-flex flex-column jacquard-24-regular" style="color:white;background: rgba(0, 102, 255, 0.6);border-radius:0px 50px 50px 0px;">
    <div class="d-flex elIcono">
        <input id="x" type="button" style="width: 40px; height: 40px;background-image:url('img/Concierto/x.jpg');background-repeat:no-repeat;background-size:cover;" />
        @await Component.InvokeAsync("IconoFiltro")
    </div>
    <form id="Filtro" class="d-flex flex-column align-items-center" style="width:450px;font-size:1.5em;overflow-y:auto;overflow-x: hidden;">
        <div class="d-flex justify-content-around" style="width:450px;">
            <div>
                @await Component.InvokeAsync("ComboBoxGrupos")
            </div>
            <div>
                @await Component.InvokeAsync("LugarComboBoxConcierto")
            </div>
        </div>
        <div class="d-flex justify-content-around" style="width:450px;">
            <div class="mt-3 d-flex flex-column">
                <label for="igualdadPrecio">Elige comparación</label>
                <select class="form-control" id="igualdadPrecio" style="width:150px;">
                    <option value="Todos" selected>Todos conciertos</option>
                    <option value="mayor">Mayor que ></option>
                    <option value="menor">Menor que <</option>
                    <option value="igual">Igual que =</option>
                </select>
            </div>
            <div class="mt-3 d-flex flex-column">
                <label for="filtroPrecioConcierto">Precio concierto</label>
                <input type="number" id="filtroPrecioConcierto" style="width:150px;" pattern="^(\d+)?([.]?\d{0,1})?$"/>
            </div>
        </div>
        <div class="d-flex justify-content-around" style="width:450px;">
            <div class="mt-3 d-flex flex-column">
                <label for="igualdadFecha">Elige comparación</label>
                <select class="form-control" id="igualdadFecha" style="width:150px;">
                    <option value="Todos" selected>Todos conciertos</option>
                    <option value="mayor">Mayor que ></option>
                    <option value="menor">Menor que <</option>
                    <option value="igual">Igual que =</option>
                </select>
            </div>
            <div class="mt-3 d-flex flex-column">
                <label for="filtroFechaConcierto">Fecha concierto</label>
                <input type="date" id="filtroFechaConcierto" style="width:150px;"/>
            </div>
        </div>
        <div class="d-flex justify-content-around" style="width:450px;">
            <input id="ConciertoReset" class="mt-5" type="reset" style="color:white;background-color:dodgerblue;width:150px;height:40px;" value="Reset"/>
            <div class="mt-3 d-flex flex-column">
                <label for="filtroNombreConcierto">Nombre concierto</label>
                <input class="form-control" type="text" id="filtroNombreConcierto" style="width:150px;" />
            </div>
        </div>
    </form>
</section>
